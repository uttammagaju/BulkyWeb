@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-2">
        <form action="Delete" method="post" class="row">
            <input type="hidden" asp-for="Id" />
            <div class=" mb-3 row">
                <label  asp-for="Title" class="ms-2 ">Title</label>
                <input  readonly asp-for="Title" class="form-control border-0 shadow" />
            </div>
            <div class=" mb-3 row">
                <label asp-for="Description" class="ms-2 ">Description</label>
                <textarea readonly asp-for="Description" class=" form-control border-0 shadow" ></textarea>
            </div>
            <div class=" mb-3 row">
                <label asp-for="ISBN" class="ms-2 ">ISBN</label>
                <input readonly asp-for="ISBN" class=" form-control border-0 shadow" />
            </div>
            <div class=" mb-3 row">
                <label asp-for="Author" class="ms-2 ">Author</label>
                <input readonly asp-for="Author" class=" form-control border-0 shadow" />
            </div>
            <div class=" mb-3 row">
                <label asp-for="ListPrice" class="ms-2 ">ListPrice</label>
                <input readonly asp-for="ListPrice" class=" form-control border-0 shadow" />
            </div>
            <div class=" mb-3 row">
                <label asp-for="Price" class="ms-2 ">Price</label>
                <input readonly asp-for="Price" class=" form-control border-0 shadow" />
            </div>
            <div class=" mb-3 row">
                <label asp-for="Price50" class="ms-2 ">Price50</label>
                <input readonly asp-for="Price50" class=" form-control border-0 shadow" />
            </div>
            <div class=" mb-3 row">
                <label asp-for="Price100" class="ms-2 ">Price100</label>
                <input readonly asp-for="Price100" class=" form-control border-0 shadow" />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-outline-primary form-control">Delete</button>
                </div>
                <div class=" col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-danger form-control">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}