@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="col-12 text-center d-flex justify-content-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-primary justify-content-end">Add New Product</a> 
        </div>
        <div class="row pb-3">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S.N</th>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model.OrderBy(u => u.Id))
                    {
                       <tr>
                           <td>@obj.Id</td>
                           <td>@obj.Title</td>
                           <td>@obj.ISBN</td>
                           <td>@obj.Author</td>
                           <td>@obj.Price</td>
                           <td>@obj.Category.Name</td>
                           <th>
                               <a asp-action="Upsert" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-outline-info">Edit</a>
                               <a asp-action="Delete" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-outline-danger">Delete</a>
                           </th>

                       </tr>
                        
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
