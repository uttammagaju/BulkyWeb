@model Category

<h1>Create Category</h1>
<form action="Create" method="post" >
    <div class="border p-3 mt-4 row">
        <h2 class="text-primary">Create Category</h2>
    </div>
   <div class=" mb-3 row">
       <label asp-for="Name">Category Name</label>
       <input asp-for="Name" class="form-control" />
       <span asp-validation-for="Name" class="text-danger"></span>

   </div>
    <div class=" mb-3 row">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
        <button type="submit" class="btn btn-primary form-control" >Create</button>
        </div>
        <div class=" col-6 col-md-3">
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control" >Back To List</a>
        </div>
    </div>
</form>
@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}