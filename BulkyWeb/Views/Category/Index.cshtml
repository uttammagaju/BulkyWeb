@model List<Category>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
           <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-4 justify-content-end text-center">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Add New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
               Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>Option</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID"class="btn btn-info">Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger">Delete</a>

                            </div>
                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>